  "version": "0.0.0",
  "author": "David Adamson",
  "type": "commonjs",
  "scripts": {
    "dev": "drizzle-kit push && concurrently --kill-others \"ng serve\" \"tsx watch --ignore 'src/client/**/*' src/main.dev.ts\"",
